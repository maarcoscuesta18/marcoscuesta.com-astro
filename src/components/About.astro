---
import * as content from '../pages/content.js';
const data = [
    {
        title: "Socials",
        array: content.contact
    }
];
---
<div class="min-h-screen font-bold" id="about">
    <h1 class="text-6xl font-extrabold text-center">About Me!</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 items-center justify-center mt-14">
        <img src="/profile.jpg" alt="profile" class="mx-auto w-1/2 rounded-full shadow-lg">
        <div class="px-8 md:px-16 text-justify">
            <h1 class="text-4xl mb-2">{ content.name } a {content.designation} based in {content.location}</h1>
            <h3 class="mt-5">{content.about}</h3>
            <div class="md:flex md:space-x-4 mt-5">
                <button class="neonButton py-2 w-full rounded mt-5">
                    <a href="/cv" class="bg-transparent ">Take a look</a>
                </button>
                <button class="neonButton py-2 w-full rounded mt-5">
                    <a href="/cv" class="bg-transparent">Download CV</a>
                </button>
            </div>
        </div>
    </div>
</div>