---
import * as content from '../pages/content.js';
const data = [
    {
        title: "Socials",
        array: content.contact
    }
];
---
<div class="min-h-screen" id="about">
    <h1 class="text-4xl font-bold text-center">About Me!</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 justify-center">
        <img src="/profile.jpg" alt="profile" class="mx-auto w-1/2 rounded-full shadow-lg">
        <div class="p-5 text-justify">
            <h1 class="text-2xl mb-2">{ content.name } a {content.designation} based in {content.location}</h1>
            <p>{content.about}</p>
            <button class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 
            hover:from-blue-700 hover:via-purple-700 hover:to-pink-700 
             text-white font-bold py-2 px-4 rounded mt-5">
                <a href="/cv" class="bg-transparent">Take a look</a>
            </button>
            <button class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 
            hover:from-blue-700 hover:via-purple-700 hover:to-pink-700 
             text-white font-bold py-2 px-4 rounded mt-5">
                <a href="/cv" class="bg-transparent">Download CV</a>
            </button>
        </div>
    </div>
</div>