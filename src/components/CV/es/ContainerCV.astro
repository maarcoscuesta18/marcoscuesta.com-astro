---
import * as CONTENT from "../../../pages/es/content"
import AccordionLayout from "../../../layouts/AccordionLayout.astro";
import Card from "../CardCV.astro";
---

<ul class="shadow-box">
  <AccordionLayout title={"Sobre mí"}  icon={"mdi:account-badge-outline"}>
    {CONTENT.about}
  </AccordionLayout>
  <AccordionLayout title={"Experiencia"} icon={"ic:baseline-work-outline"}>
      {
        CONTENT.work.map((item) => {
          return (
            <Card
              title={item.role}
              timeframe={`${item.from} - ${item.to}`}
              description={item.location}
              tags={item.skills}
              url={item.org_url}
              url_name={item.org}
            />
          );
        })
      }
  </AccordionLayout>
  <AccordionLayout title={"Educación"} icon={"carbon:education"}>
      {
        CONTENT.education.map((item) => {
          return (
            <Card
              title={item.course}
              timeframe={`${item.from} - ${item.to}`}
              description={item.location}
              tags={""}
              url={"#"}
              url_name={item.institute}
            />
          );
        })
      }
  </AccordionLayout>
  <AccordionLayout title={"Certificaciones"} icon={"carbon:certificate"}>
      {
        CONTENT.certificates.map((item) => {
          return (
            <Card
              title={item.title}
              timeframe={item.issued}
              description={item.org}
              tags={item.description}
              url={item.url}
              url_name={"Ver certificado"}
            />
          );
        })
      }
  </AccordionLayout>
  <AccordionLayout title={"Idiomas"} icon={"mdi:book"}>
      {
        CONTENT.languages.map((item) => {
          return (
            <Card
              title={item.level}
              timeframe={item.language}
              description=""
              tags=""
              url={""}
              url_name={""}
            />
          );
        })
      }
  </AccordionLayout>
  <AccordionLayout title={"Proyectos"} icon={"ion:md-build"}>
    {
      CONTENT.projects.map((item) => {
        return (
          <Card
            title={item.title}
            timeframe="2022-2023"
            description={item.description}
            tags={item.tech}
            url={item.url}
            url_name={"Abrir proyecto"}
          />
        );
      })
    }
  </AccordionLayout>
  <AccordionLayout title={"Contacto"} icon={"ri:contacts-book-fill"}>
      {
        CONTENT.contact.map((item) => {
          return (
            <Card
              title={""}
              timeframe={item.title}
              description=""
              tags=""
              url={item.source}
              url_name={item.source_name}
            />
          );
        })
      }
  </AccordionLayout>
</ul>
