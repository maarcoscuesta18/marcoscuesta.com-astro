---
import * as CONTENT from "../../pages/content.js"
import Icon from "../Icon/Icon.astro";
import type { iconPaths } from '../Icon/IconPaths';
const iconLinks: { label: string; href: string; icon: keyof typeof iconPaths }[] = [
	{ label: 'GitHub', href: 'https://github.com/maarcoscuesta18', icon: 'github-logo' },
	{ label: 'Linkedin', href: 'https://www.linkedin.com/in/marcos-cuesta-abanades/', icon: 'linkedin-logo' },
];
---

<!-- Hero section -->
<header class="minimal-header">
  <div class="header-content">
    <div class="header-text">
		<h1>{CONTENT.name}</h1>
		<h3>{CONTENT.designation}</h3>
    </div>
    <div class="header-links">
			{
				iconLinks.map(({ href, icon, label }) => (
					<a href={href} class="social" target="_blank" aria-label={label}>
						<Icon icon={icon} size="20px"/>
					</a>
				))
			}
		</div>
  </div>
</header>
<style>
	.minimal-header {
		max-width: 800px;
		margin: 0 auto;
		padding: 3rem 1rem 2rem;
		font-family: 'Share Tech Mono', 'Courier New', monospace;
	}

	.header-content {
		text-align: center;
		border-bottom: 1px solid #000000;
		padding-bottom: 1.5rem;
	}

	.header-text h1 {
		font-size: 2rem;
		margin-bottom: 0.5rem;
		font-weight: 400;
		color: #000000;
	}

	.header-text h3 {
		font-size: 1rem;
		margin-bottom: 0.25rem;
		font-weight: 400;
		color: #000000;
	}

	.header-text p {
		font-size: 0.875rem;
		color: #000000;
		margin: 0;
	}

	.header-links {
		display: flex;
		justify-content: center;
		gap: 1rem;
		margin-top: 1rem;
	}

	.social {
		display: flex;
		text-decoration: none;
		color: #000000;
		transition: opacity 0.2s;
	}

	.social:hover,
	.social:focus {
		opacity: 0.6;
	}
</style>
