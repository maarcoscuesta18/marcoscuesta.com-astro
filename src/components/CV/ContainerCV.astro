---
import * as CONTENT from "../../pages/content.js"
const {currentRegion} = Astro.props;
---

<div class="simple-container">
  <section class="content-section">
    <p class="description-text">{CONTENT.about[currentRegion]}</p>
  </section>

  <section class="content-section">
    <div class="tech-list">
      {CONTENT.techStack.map((tech) => (
        <span class="tech-item">{tech}</span>
      ))}
    </div>
  </section>
</div>

<style>
  .simple-container {
    font-family: 'Share Tech Mono', 'Courier New', monospace;
  }

  .content-section {
    margin-bottom: 3rem;
  }

  .description-text {
    font-size: 1rem;
    line-height: 1.8;
    color: #000000;
    margin-bottom: 2rem;
    white-space: pre-line;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 400;
    color: #000000;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #000000;
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tech-item {
    font-size: 0.875rem;
    color: #000000;
    padding: 0.5rem 1rem;
    border: 1px solid #000000;
    display: inline-block;
  }
</style>
