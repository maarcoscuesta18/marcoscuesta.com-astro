---
import IndexLayout from "../../layouts/indexLayout.astro";
---
<IndexLayout>
  <h1 class="bold text-5xl text-center m-5">Pacman Game</h1>
  <div class="w-full flex flex-wrap justify-center">
    <button id="startResetBtn" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded m-2 transition duration-200 neonButton">
        Start
    </button>
    <button disabled id="pauseResumeBtn"  class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded m-2 transition duration-200 neonButton ">
        Pause
    </button>
  </div>
  <canvas id="game"></canvas>
  <script src="../../components/pacman/pacman.js"></script>
</IndexLayout>
<style>
    canvas {
        border: 1px solid var(--accent-regular);
        display: block;
        margin: 0 auto;
        box-shadow: 0 0 2px #fff, 
				  inset 0 0 2px #fff, 
				  0 0 5px var(--accent-dark), 
				  0 0 15px var(--accent-dark), 
				  0 0 30px var(--accent-dark);
    }
</style>
